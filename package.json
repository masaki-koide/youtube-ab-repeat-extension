{
  "name": "youtube-ab-repeat-extension",
  "description": "YouTube AB Repeat Extension - Loop sections of YouTube videos",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "postinstall": "wxt prepare",
    "check": "biome check",
    "check:fix": "biome check --write",
    "check:staged": "biome check --write --no-errors-on-unmatched",
    "knip": "knip --config knip.json",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "safeguard": "concurrently --kill-others-on-fail --prefix=\"[{name}]\" --names=\"COMPILE,TEST,CHECK,KNIP\" --prefix-colors=\"bgBlue.bold,bgGreen.bold,bgYellow.bold,bgMagenta.bold\" \"npm run compile\" \"npm run test\" \"npm run check:fix\" \"npm run knip\""
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "lint-staged": "^16.1.2",
    "storybook": "^8.6.14",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wxt": "^0.20.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "npm run check:staged --"
  }
}
