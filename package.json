{
  "name": "youtube-ab-repeat-extension",
  "description": "YouTube AB Repeat Extension - Loop sections of YouTube videos",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "postinstall": "wxt prepare",
    "check": "biome check",
    "check:fix": "biome check --write",
    "check:staged": "biome check --write --no-errors-on-unmatched",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wxt": "^0.20.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "npm run check:staged --"
  }
}
